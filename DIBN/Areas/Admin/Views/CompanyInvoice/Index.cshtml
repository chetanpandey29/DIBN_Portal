                        }
                        if ('@Model.allowedModule.Contains("View")' == "True") {
                            returnKey = returnKey + '<button class="btn btn-theme float-start ms-2 mt-1 Details" onclick=' + viewProformaInvoice + '>View Proforma Invoice</button>';
                        }
                        if ('@Model.allowedModule.Contains("Update")' == "True") {
                            returnKey = returnKey + '<button class="btn btn-theme float-start ms-2 mt-1 Update" onclick=' + generateFinalInvoice + '>Generate Final Invoice</button>';

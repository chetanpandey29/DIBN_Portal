        $mymodal = $("#InvoiceModal");
        $mymodal.modal("show");
    };
</script>
<script>
    $("#btnSave").on("click", function () {

        var selectedVal = "";
        var select = $("input[name='Changes']:checked").val();
        if (select.length > 0) {

            selectedVal = select;
            if (selectedVal == "No") {
                $('#InvoiceModal').modal('hide');
                $mymodal = $("#CreateInvoiceInfo");
                $mymodal.modal("show");

        window.location.href = url;
    };

    function GeneratePI(invoice) {
        var url = "@Url.Action("ProformaInvoice", "CompanyInvoice")";
        url = url + "?InvoiceNumber=" + invoice;
        window.open(url, "NewWindow");
    };

    function GenerateFinalInvoice(invoice) {

            else if (selectedVal == "Yes") {
                var invoice = $("#InvoiceNumber").val();
                var url = "@Url.Action("InvoiceDetails", "CompanyInvoice")";
                url = url + "?InvoiceNumber=" + invoice;
                window.location.href = url;
            }
        }
    });

                                            text: "Something Went Wrong Please Try Again.",
                                            icon: 'error'
                                        }).then((result) => {
                                            window.location.reload();
                                        });
                                    }
                                    else {
                                        swalWithBootstrapButtons.fire({
                                            title: 'Deleted.',
                                            text: "Service Request Deleted Successfully..!!",
                                            icon: 'success'
                                        }).then((result) => {
                                            window.location.reload();
                                        });
                                    }
                                }
                            });
                        }

@model DIBN.Areas.Admin.Models.SaveAssignUser

<div class="row">
    @if (Model.getMainCompanyEmployees.Count > 0)
    {
        <form asp-action="SaveAssignedUser" asp-controller="ServiceRequests" method="post">
            @foreach (var item in Model.getMainCompanyEmployees)
            {
                <div class="form-group">
                    <input name="UserId" class="form-check-input" type="checkbox" value="@item.Id" @item._checked !="" ? @item._checked : "" />
                    <span class="ms-3 mb-1">@item.FirstName @Html.Raw(" ") @item.LastName </span>
                </div>
            }
            <input asp-for="@Model.ServiceId" type="hidden"/>
        <input asp-for="@Model.SerialNumber" type="hidden"/>
        <input asp-for="@Model.actionMethod" type="hidden"/>
        <input asp-for="@Model.companyId" type="hidden"/>
        <div class="modal-footer">
            <div class="form-group">
                <input type="submit" value="Assign" class="btn btn-theme" />
            </div>
        </div>
        </form>
    }
    else
    {
        <p style="font-weight:900;font-size:15px;text-align:center;">No Employee(s) Found to Assign Service Request.<br/>Please add Service Request Permission to any of DIBN Employee to Assign Service Request.</p>
    }
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $('form').submit(function () {
        alert("Please Wait for a while,We are currently Saving your Data.");
        $('input[type="submit"]').attr('disabled', 'disabled');
    });
</script>
@model DIBN.Areas.Admin.Models.EmployeeServiceRequestDocument
@{
    ViewData["Title"] = "GetServiceRequestDocument";
    Layout = null;
}
<html>
<head>
    <!-- Bootstrap Css -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- App Css-->
    <link href="~/assets/css/app.min.css" rel="stylesheet" />
    <style>
        .internal {
            width: 100%;
            height: 830px;
        }

        .container {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }
    </style>
</head>
<body style="background-color:#fff;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                @{
                    string Type = ViewBag.type;
                }
                @if (ViewBag.Base64String != null)
                {

                    @if (ViewBag.DocumentId != 0 || ViewBag.DocumentId != null)
                    {
                        <div class="col-md-12">
                            <a href="@Url.Action("DownloadDocument","EmployeeService",new{Id=@ViewBag.DocumentId})" class="btn btn-theme float-end mb-2 ms-2 mt-1">Download</a>
                            <a href="@Url.Action("GetRequestDetail","ServiceRequests",new{Id=@ViewBag.RequestId,name=@ViewBag.Module})" class="btn btn-theme float-end mb-2 mt-1">Back</a>
                        </div>
                    }
                    @if (Type.StartsWith("image/"))
                    {
                        <img src="@ViewBag.Base64String" />
                    }
                    else
                    {
                        <object data="@ViewBag.Base64String" frameBorder="0" class="internal"></object>
                    }


                }
            </div>
        </div>
    </div>

    <script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")"></script>
    <script src="@Url.Content("~/assets/libs/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/assets/js/app.js")"></script>

</body>
</html>





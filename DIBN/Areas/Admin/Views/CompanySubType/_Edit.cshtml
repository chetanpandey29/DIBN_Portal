@model DIBN.Areas.Admin.Models.UpdateCompanySubTypeModel

<div class="row">
    <form asp-action="Edits" asp-controller="CompanySubType" method="post" id="editCompanyService">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="MainType" class="control-label"></label>
            @Html.DropDownListFor(w => w.MainType, Model.MainTypes, new { @class = "form-control form-select single-line", @id = "MainType", required = (string)null })
        </div>
        <div class="form-group">
            <label asp-for="SubType" class="control-label"></label>
            <input asp-for="SubType" class="form-control" oninvalid="this.setCustomValidity('Please provide Sub Type.')" oninput="this.setCustomValidity('')" maxlength="100" required />
            <span asp-validation-for="SubType" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Id" hidden="hidden"/>
        <div class="modal-footer">
            <div class="form-group">
                <input type="submit" value="Save" id="btnUpdate" class="btn btn-theme" />
            </div>
        </div>
    </form>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<link href="~/select2/select2.min.css" rel="stylesheet" />
<script src="~/select2/select2.min.js"></script>

<script>
    ////// Open Selection dropdown on focus                                             -- Yashasvi (16-10-2024)
    $(document).on('focus', '.select2.select2-container', function (e) {
        if (e.originalEvent && $(this).find(".select2-selection--single").length > 0) {
            $(this).siblings('select').select2('open');
        }
    });
    $(function () {
        $('#MainType').select2();
    });
</script>
<script>
    jQuery('#editCompanyService').on('submit', function () {
        if (jQuery(this).data('form_is_invalid')) {
            jQuery(this).data('form_is_invalid', false);
        } else {
            jQuery(this).find('#btnUpdate').prop('disabled', true);
        }
    }).on('invalid-form.validate', function () {
        jQuery(this).data('form_is_invalid', true);
    });
</script>
@model DIBN.Areas.Admin.Models.CompanyDocumentTypeModel
<div class="row">
    <form asp-action="Edits" method="post" id="editCompanyDocument">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="DocumentName" class="control-label"></label>
            <input asp-for="DocumentName" class="form-control" oninvalid="this.setCustomValidity('Please Enter Document Type.')" oninput="this.setCustomValidity('')" maxlength="100" required/> 
            <span asp-validation-for="DocumentName" class="text-danger" ></span> 
        </div>
        <input type="hidden" name="Module" id="Module" value="@Model.Module" />
        <input type="hidden" name="ID" id="ID" value="@Model.ID" />
        <div class="modal-footer">
            <div class="form-group">
                <input type="submit" value="Update" id="btnEdit" class="btn btn-theme" />
            </div>
        </div>
    </form>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    jQuery('#editCompanyDocument').on('submit', function () {
        if (jQuery(this).data('form_is_invalid')) {
            jQuery(this).data('form_is_invalid', false);
        } else {
            jQuery(this).find('#btnEdit').prop('disabled', true);
        }
    }).on('invalid-form.validate', function () {
        jQuery(this).data('form_is_invalid', true);
    });
</script>
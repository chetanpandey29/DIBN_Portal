                                    $("#loader").hide();
                                }
                            }
                        })
                    }
                });
                $("#loader").hide();
            }
            else {
                row.child.hide();
                tr.removeClass('shown');
            }
        });
    });
</script>

<script>
    function AddNew() {
        var module = $("#Module").val();
        var url = "@Url.Action("Create","GeneratePI")";
        window.location.href = url + "?name=" + module;
    };
    function GeneratePI(invoice) {
        var url = "@Url.Action("ProformaInvoice","GeneratePI")";
        url = url + "?InvoiceNumber=" + invoice;
        window.open(url, "NewWindow");
    };
</script>
<script>
    function RemovePI(Invoicenumber) {
        event.preventDefault();
        const swalWithBootstrapButtons = Swal.mixin({
            customClass: {
                confirmButton: 'ms-3 btn btn-success',
                cancelButton: 'btn btn-danger'
            },
            buttonsStyling: false
        })

        swalWithBootstrapButtons.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'No, cancel!',
            reverseButtons: true,
            showConfirmButton: true,
        }).then((result) => {
            if (result.isConfirmed) {
                $("#loader").show();
                $.ajax({
                    url: "@Url.Action("DeleteNewCompanyPI", "GeneratePI")",
                    method: "GET",
                    data: { "InvoiceNumber": Invoicenumber },
                    success: function (response) {
                        $("#loader").hide();
                        swalWithBootstrapButtons.fire({
                            title: 'Deleted.',
                            html: "Proforma Invoice <b>" + Invoicenumber + "</b> Deleted Successfully..!!",
                            icon: 'success'
                        }).then((result) => {
                            window.location.reload();
                        });
                    }
                });
            }
        });
    };
</script>

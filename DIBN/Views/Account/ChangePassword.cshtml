@model DIBN.Models.ChangePasswordModel
@{
    ViewData["Title"] = "LockScreen";
    Layout = "~/Areas/Admin/Views/Shared/Theme/_BlankLayout.cshtml";
}
<html>
<body class="authentication-bg" style="background-color:white;">
    <div class="account-pages my-5  pt-sm-5">
        <div class="container">
            <div class="row justify-content-center">

                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div>
                        <a href="#" class="mb-5 d-block auth-logo">
                            <img src="~/DIBN_Logo.png" alt="" height="70" class="logo logo-dark">
                        </a>
                        <div class="card">

                            <div class="card-body p-4">

                                <div class="text-center mt-2">
                                    <h5 class="text-theme">Reset Password</h5>
                                </div>
                                <div class="p-2 mt-4">
                                    <form action="@Url.Action("ChangePasswords", "Account")">

                                       <div class="form-group">
                                            <label class="control-label">Password</label> <span class="text-danger">*</span>
                                            <div class="input-group">
                                                <input name="NewPassword" id="NewPassword" type="password" class="form-control" />
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text btn btn-theme" id="show_password"><i class="fas fa-eye-slash icon"></i></span>
                                                </div>
                                            </div>
                                        </div>

                                        <input type="hidden" name="Id" value="@Model.Id"/>
                                        <input type="hidden" name="User" value="@Model.User"/>
                                        <input type="hidden" name="AccountType" value="@Model.AccountType"/>

                                        <div class="mt-3 text-end">
                                            <button class="btn btn-theme w-sm waves-effect waves-light" type="submit">Reset</button>
                                        </div>


                                        <div class="mt-4 text-center">
                                            <p class="mb-0">Remember It ? <a href=@Url.Action("Login", "Account") class="fw-medium text-theme"> Signin </a></p>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript">  
        $(document).ready(function () {  
            $('#show_password').hover(function show() {  
                $('#NewPassword').attr('type', 'text');  
                $('.icon').removeClass('fas fa-eye-slash').addClass('fas fa-eye');  
            },  
            function () {  
                $('#NewPassword').attr('type', 'password');  
                $('.icon').removeClass('fas fa-eye').addClass('fas fa-eye-slash');  
            });   
        });  
    </script>  
</body>
</html>
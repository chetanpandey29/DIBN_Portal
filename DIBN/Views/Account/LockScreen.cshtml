@{
    ViewData["Title"] = "LockScreen";
    Layout = "~/Areas/Admin/Views/Shared/Theme/_BlankLayout.cshtml";
}

<body class="authentication-bg" style="background-color:white;">
    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div>
                        <a href=@Url.Action("LockScreen", "Account",new{area=""}) class="mb-5 d-block auth-logo">
                            <img src="~/DIBN_Logo.png" alt="" height="70" class="logo logo-dark">
                        </a>
                        <div class="card" style="border:1px solid #243c7c !important;box-shadow: 0 2px 4px #9cc5f0 !important;">
                            <div class="card-body p-4">
                                <div class="text-center mt-2">
                                    <h5 class="text-theme">Lock screen</h5>
                                    <p class="text-muted">Click on Unlock button to unlock the screen!</p>
                                </div>
                                <div class="p-2 mt-4">
                                    <div class="mt-3 text-center">
                                        <a class="btn btn-theme w-sm waves-effect waves-light" href="javascript:history.go(-1);">Unlock</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
</body>
